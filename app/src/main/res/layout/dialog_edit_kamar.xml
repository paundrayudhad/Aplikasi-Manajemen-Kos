<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:padding="10dp"
    android:layout_height="match_parent">

    <EditText
        android:id="@+id/etEditNamaKamar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/edittext_background"
        android:layout_marginBottom="8dp"
        android:hint="Nama Kamar"
        android:minHeight="48dp" />

    <Spinner
        android:id="@+id/spEditPenghuniKamar"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@drawable/edittext_background"
        android:layout_marginBottom="8dp"
        android:hint="Penghuni Kamar"
        android:textSize="18sp" />

    <Spinner
        android:id="@+id/spEditStatusKamar"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@drawable/edittext_background"
        android:layout_marginBottom="8dp"
        android:hint="Status Kamar"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/etEditHargaKamar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/edittext_background"
        android:layout_marginBottom="8dp"
        android:hint="Harga Kamar"
        android:inputType="number"
        android:minHeight="48dp" />

</LinearLayout>
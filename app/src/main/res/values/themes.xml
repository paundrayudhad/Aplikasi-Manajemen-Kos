<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme for both day and night mode -->
    <style name="Base.Theme.KosFomo" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your theme here. -->
        <!-- Example: <item name="colorPrimary">@color/my_primary</item> -->
    </style>

    <!-- Theme for both Day and Night Mode -->
    <style name="Theme.KosFomo" parent="Base.Theme.KosFomo" />

    <style name="Theme.KosFomo.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.KosFomo.AppBarOverlay" parent="ThemeOverlay.Material3.Dark.ActionBar" />

    <style name="Theme.KosFomo.PopupOverlay" parent="ThemeOverlay.Material3.Light" />

    <!-- Background for both Day and Night Mode -->
    <style name="bgheader">
        <item name="android:src">@drawable/waves_gradient</item> <!-- Same background image for both modes -->
    </style>
</resources>
